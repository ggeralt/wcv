<Window x:Class="WPFApp.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFApp"
        mc:Ignorable="d"
        Title="Settings" Height="300" Width="250" WindowStartupLocation="CenterScreen">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <Label>Select gender:</Label>
        <ComboBox x:Name="cbSelectGender" SelectedIndex="0">
            <ComboBoxItem Tag="male" Content="Male"/>
            <ComboBoxItem Tag="female" Content="Female"/>
        </ComboBox>
        <Label>Select language:</Label>
        <ComboBox x:Name="cbSelectLanguage" SelectedIndex="0">
            <ComboBoxItem Tag="english" Content="English"/>
            <ComboBoxItem Tag="hrvatski" Content="Hrvatski"/>
        </ComboBox>
        <Label>Screen size:</Label>
        <ComboBox x:Name="cbScreenSize" SelectedIndex="0">
            <ComboBoxItem Tag="small" Content="800x550"/>
            <ComboBoxItem Tag="medium" Content="1200x950"/>
            <ComboBoxItem Tag="large" Content="1600x1350"/>
        </ComboBox>
        <Button x:Name="btnContinue" Content="Continue" HorizontalAlignment="Center" Padding="15,5" Margin="10" Click="btnContinue_Click"/>
    </StackPanel>
</Window>
